[
  {
    "name": "api",
    "image": "<IMAGE>:<VERSION>",
    "essential": true,
    "cpu": 10,
    "memory": 512,
    "links": [],
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "ENVIRONMENT",
        "value": "<ENVIRONMENT>"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/api-<ENVIRONMENT>",
        "awslogs-stream-prefix": "api-<ENVIRONMENT>-log-stream",
        "awslogs-region": "eu-west-1"
      }
    }
  }
]